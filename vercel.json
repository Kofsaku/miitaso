{
  "framework": "nextjs",
  "buildCommand": "npm run build",
  "outputDirectory": ".next",
  "functions": {
    "app/api/**/*.ts": {
      "maxDuration": 30
    }
  },
  "regions": ["hnd1"],
  "redirects": [
    {
      "source": "http://miitaso.com/(.*)",
      "destination": "https://miitaso.com/$1",
      "permanent": true
    },
    {
      "source": "http://www.miitaso.com/(.*)",
      "destination": "https://miitaso.com/$1",
      "permanent": true
    },
    {
      "source": "https://www.miitaso.com/(.*)",
      "destination": "https://miitaso.com/$1",
      "permanent": true
    }
  ]
}